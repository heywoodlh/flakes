{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["kube\/flake.nix"],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "image = \"(?<depName>.*):(?<currentValue>.*)\";"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
